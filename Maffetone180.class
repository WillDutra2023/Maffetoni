    public int calcularMaxCardiaco(int idade, boolean convalescente, boolean sedentario, boolean ativoConstipado, boolean ativo) {
        
        int maxCardiaco = 180-idade;
        
        if(convalescente)
            maxCardiaco=maxCardiaco-10;
        
        if(sedentario)
            maxCardiaco=maxCardiaco-5;
        
        if(ativoConstipado)
            maxCardiaco=maxCardiaco-0;
            
        if(ativo)
            maxCardiaco=maxCardiaco+5;
                    
       return maxCardiaco;             

    }

    public int calcularMinCardiaco(int maxCardiaco) {
        return maxCardiaco-10;
    }


    
